<div class="container mt-2">
  <h1>My Tasks</h1>
  <br>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.title, task_path(task.id) %></li>
    <% end %>
  </ul>
  <br>
    <button class="btn btn-primary mt-3 btn-style">
      <%=link_to "add a task", new_task_path %>
      </button>
  </div>
